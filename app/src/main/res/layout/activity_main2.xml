<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/black"
    >

     <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context=".MainActivity2"
     android:background="@color/black">

     <com.denzcoskun.imageslider.ImageSlider
         android:id="@+id/post"
         android:layout_width="wrap_content"
         android:layout_height="505dp"
         app:iss_auto_cycle="true"
         app:iss_delay="200"
         app:iss_error_image="@drawable/ic_baseline_running_with_errors_24"
         app:iss_period="30000"
         app:iss_text_align="CENTER"
         app:iss_title_background="@drawable/gradient"
         />

         <ImageView
             android:id="@+id/search_btn"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_alignParentRight="true"
             android:layout_marginTop="39dp"
             android:layout_marginEnd="22dp"
             android:src="@drawable/ic_baseline_search_24" />

     <LinearLayout
         android:id="@+id/plays"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/continues"
         android:layout_centerInParent="true"
         android:layout_marginBottom="4dp"
         android:background="@drawable/watchnow_1"
         android:clickable="true"
         android:gravity="center">

         <ImageView
             android:layout_width="35dp"
             android:layout_height="30dp"
             android:layout_gravity="center_vertical"
             android:src="@drawable/play123"
             />

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginRight="9dp"
             android:gravity="center"
             android:text="Play"
             android:textColor="@color/black"
             android:textSize="20dp"
             android:textStyle="bold"
              />

     </LinearLayout>

     <RelativeLayout
         android:id="@+id/continues"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/post"
         android:layout_marginBottom="60dp"
         android:background="@color/black">

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/banner"
             android:layout_width="match_parent"
             android:layout_height="505dp">

         </androidx.recyclerview.widget.RecyclerView>




         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/review"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp">

         </androidx.recyclerview.widget.RecyclerView>

     </RelativeLayout>

    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/boom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/black"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menus"
        />

</RelativeLayout>