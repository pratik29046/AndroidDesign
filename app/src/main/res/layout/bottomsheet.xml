<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/hello"
    android:orientation="horizontal"
    android:background="@color/information_background"
    >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/image2"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_alignLeft="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Title name"
        android:textSize="28dp"
        android:layout_marginStart="138dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020 A 1 Session"
        android:textSize="15dp"
        android:layout_marginStart="138dp"
        android:textColor="#6FFFFFFF"
        />
    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/cri"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:text="You means of communication. And not just phones â€” in order to be truly contemporary, filmmakers must incorporate text"
        android:textColor="@color/white"
        android:textSize="16dp"
        />


      <LinearLayout
          android:id="@+id/playdown"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/img1"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginTop="4dp"
          >
          <ImageView
              android:layout_width="30dp"
              android:layout_height="40dp"
              android:src="@drawable/playsong"
              android:layout_weight="2"
              android:background="#A83E3E"
              android:layout_marginStart="20dp"
              />
          <ImageView
              android:layout_width="30dp"
              android:layout_height="40dp"
              android:src="@drawable/download"
              android:layout_weight="1"
              />
          <ImageView
              android:layout_width="30dp"
              android:layout_height="40dp"
              android:src="@drawable/playsong"
              android:layout_weight="1"
              />

      </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playdown"
        android:layout_marginTop="4dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/info"
            android:layout_weight="4"

            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Episodes &amp; Info"
            android:gravity="center_vertical"
            android:layout_weight="8"
            android:layout_marginEnd="80dp"
            android:textColor="@color/white"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rightarrow"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>


</RelativeLayout>